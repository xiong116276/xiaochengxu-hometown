/* components/footer/footer.wxss */
.footer{
  border-top: 1px solid #ccc;
  padding: 20rpx;
  margin-bottom: 20rpx;
}
.text-title{
  color: #3c763d;
  font-weight: bold;
  margin-bottom: 15rpx;
  font-size: 34rpx;
}

.connect-way{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}
.connect-item{
  width: 40%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  text-align: center;
}
.connect-way image{
  height: 250rpx;
}