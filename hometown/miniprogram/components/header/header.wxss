/* pages/header.wxss */
/* header template start*/
.header{
  position: fixed;
  top:0;
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  /* display: flex; */
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 10rpx;
  z-index: 500;
}
.header .user-head{
  float: left;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-size: cover;
}
.header .navbar .btn-toogle-nav{ 
  float: right;
  width:80rpx;
  height:80rpx;
  border: 1rpx solid #ccc;
  border-radius: 8rpx;
}
.header .nav-list{
  position: fixed;
  top: 100rpx;
  left: 0;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
  border-top: 1px solid #ccc;
}
.header .nav-list .nav-item{
  border-bottom: 1px solid #ccc;
  height: 100rpx;
  line-height: 100rpx;
  width: 100%;
  text-align: center;
}
.btnWhite{
  background-color: #fff;
}
.btnGray{
  background-color: #ccc;
}
/* header template end*/